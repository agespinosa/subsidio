{% extends 'base.html.twig' %}

{% block title %}Requisito{% endblock %}

{% block body %}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Subsidio</h5>
            <div class="row col-12 mt-2">
                <a type="button" role="button" class="mb-2 btn btn-sm btn-secondary"
                   href="{{ path('requisito_index') }}">Volver</a>
            </div>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ requisito.id }}</td>
                    </tr>
                    <tr>
                        <th>Fecha Desde</th>
                        <td>{{ requisito.fechaDesde ? requisito.fechaDesde|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Fecha Hasta</th>
                        <td>{{ requisito.fechaHasta ? requisito.fechaHasta|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Tipo Forma Pago</th>
                        <td>{{ requisito.tipoFormaPago }}</td>
                    </tr>
                    <tr>
                        <th>File</th>
                        <td>{{ requisito.fileName }}</td>
                    </tr>
                </tbody>
            </table>



            <div class="row">
                <button class="btn btn-primary btn-sm btn-block"
                        href="{{ path('requisito_edit', {'id': requisito.id}) }}">Editar</button>
            </div>

            {{ include('requisito/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
