<form method="post" action="{{ path('requisito_delete', {'id': requisito.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ requisito.id) }}">
    <div class="row mt-2">
        <button class="btn btn-danger btn-sm btn-block">Borrar</button>
    </div>
</form>
