{% extends 'base.html.twig' %}

 {% block javascripts %}
     <script
             src="https://code.jquery.com/jquery-3.5.1.min.js"
             integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
             crossorigin="anonymous"></script>
     <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
     <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
 {% endblock %}

{% block title %}Subsidios Pago a Proveedores{% endblock %}

{% block body %}

            <h5>Subsidios Pago a Proveedores</h5>


            <div class="row mt-3">
                    <div class="col-12 text-left">
                        <div class="row align-items-center">
                            <div class="col-3 text-right">
                                <span class="font-weight-bold"> Fecha Pago: </span>
                                <span class="font-weight-bold text-success">
                                        {{ requisito.fechaDesde |date("d/m/Y") }}</span>
                                </span>
                            </div>
                            <div class="col-3 text-right">
                                <span class="font-weight-bold"> Cantidad Beneficiarios: </span> <span class="font-weight-bold text-success">
                                    {{ beneficiarios |length }}</span>
                                </span>
                            </div>
                            <div class="col-3 text-right">
                                <span class="font-weight-bold">
                                 Total:
                                </span>
                                <span class="text-danger"> {{ requisito.totalMontoPesos|format_currency('ARS', locale='es') }}</span>
                            </div>
                        </div>

                    </div>
                    <div class="col-12">
                        <table >
                            <thead>
                            <tr>
                                <th>ReferenciaCliente</th>
                                <th>Nombre</th>
                                <th>Cuit</th>
                                <th>Monto</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for beneficiario in beneficiarios %}
                                <tr>
                                    <td>{{ beneficiario.referenciaCliente }}</td>
                                    <td>{{ beneficiario.nombreBeneficiario }}</td>
                                    <td>{{ beneficiario.cuit }}</td>
                                    <td>{{ beneficiario.importeAPagar |format_currency('ARS', locale='es')}}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% if  beneficiarios|length == 0 %}
                        <div class="row" >
                            <div class="col-12 alert alert-secondary" role="alert">
                                Sin Registros
                            </div>
                        </div>
                    {% endif %}
                </div>


{% endblock %}
