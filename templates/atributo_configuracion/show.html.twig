{% extends 'content_base.html.twig' %}

{% block title %}Parametro{% endblock %}

{% block content_body %}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Parametro</h5>
        <div class="row col-12 mt-2">
            <a type="button" role="button" class="mb-2 btn btn-sm btn-secondary"
               href="{{ path('atributo_configuracion_index') }}">Volver</a>
        </div>

        <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ atributo_configuracion.id }}</td>
            </tr>
            <tr>
                <th>Clave</th>
                <td>{{ atributo_configuracion.clave }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ atributo_configuracion.valor }}</td>
            </tr>
            <tr>
                <th>FechaBaja</th>
                <td>{{ atributo_configuracion.fechaBaja ? atributo_configuracion.fechaBaja|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ atributo_configuracion.createdAt ? atributo_configuracion.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ atributo_configuracion.updatedAt ? atributo_configuracion.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

        <div class="row">
            <a type="button" role="button" class="btn btn-block btn-sm btn-warning"
               data-toggle="tooltip" data-placement="top" title="Editar"
               href="{{ path('atributo_configuracion_edit', {'id': atributo_configuracion.id}) }}">
                <i class="fas fa-pen-square"></i>
            </a>
        </div>
        {{ include('atributo_configuracion/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
